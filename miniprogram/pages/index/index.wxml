<!--pages/index/index.wxml-->
<view class="index">
	<swiper class="index-swiper" indicator-dots="{{true}}" autoplay="{{true}}" circular="{{true}}" style="height:{{height}}">
		<block wx:for="{{background}}" wx:key="*this">
			<swiper-item>
				<image src="{{item}}" class="swiper-item" mode="widthFix" bindload='goheight'></image>
			</swiper-item>
		</block>
	</swiper>

	<view class="index-tab">
		<view class="active">
			推荐
		</view>
		<view>
			最新
		</view>
	</view>

	<view class="index-list">
		<view class="index-list-item">
			<image mode="aspectFill" src="../../images/swiper/1.jpg"></image>
			<view class="index-list-text">
				<text>小喵喵</text>
				<text>
			<text class="iconfont icondianzan"></text>
				<text>100</text>
				</text>
			</view>
		</view>
		<view class="index-list-item">
			<image mode="aspectFill" src="../../images/swiper/2.jpg"></image>
			<view class="index-list-text">
				<text>小喵喵</text>
				<text>
			<text class="iconfont icondianzan"></text>
				<text>200</text>
				</text>
			</view>
		</view>
	</view>
</view>